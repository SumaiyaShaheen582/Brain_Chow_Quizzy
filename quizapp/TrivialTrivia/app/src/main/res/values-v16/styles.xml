<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QuizCardQuestion">
        <item name="android:background">@color/cardTitle</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="QuizCardChoice" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">left|start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="StatsTitles" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="FullStatistics" parent="StatsLabels">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StatsLabels" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatsContent" parent="TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="WelcomeHeadings" parent="StatsLabels">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">0dp</item>
        <item name="android:textAppearance">@style/StatsLabels</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>
</resources>