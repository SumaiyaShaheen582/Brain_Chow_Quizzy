<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/cardTitle</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">@color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="QuizCardQuestion">
        <item name="android:background">@color/cardTitle</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="QuizCardChoice" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">left|start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="QuizCardChoice.OddChoice" parent="QuizCardChoice">
        <item name="android:background">@color/white</item>
    </style>

    <style name="QuizCardChoice.EvenChoice" parent="QuizCardChoice">
        <item name="android:background">@color/white</item>
    </style>

    <style name="QuizChoiceDivider">
        <item name="android:layout_marginLeft">@dimen/divider_margin</item>
        <item name="android:layout_marginRight">@dimen/divider_margin</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="QuizPageFooter">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="CorrectAnswerBox" parent="QuizCardChoice">
        <item name="android:background">@color/correctAnswerGreen</item>
    </style>

    <style name="WrongAnswerBox" parent="QuizCardChoice">
        <item name="android:background">@color/wrongAnswerRed</item>
    </style>

    <style name="StatsTitles" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="FullStatistics" parent="StatsLabels">
    </style>

    <style name="StatsLabels" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatsContent" parent="TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="WelcomeHeadings" parent="StatsLabels">

    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">0dp</item>
        <item name="android:textAppearance">@style/StatsLabels</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
